<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinClase02.Views.Login"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>

        <StackLayout
            Margin="10,0,10,0"
            BackgroundColor="Beige"
            VerticalOptions="Center">
            <Entry
                x:Name="entryUsuario"
                FontAttributes="Bold"
                FontSize="Large"
                Placeholder="Usuario" />
            <Entry
                x:Name="entryClave"
                FontAttributes="Bold"
                FontSize="Large"
                IsPassword="True"
                Placeholder="Clave" />
            <Button
                Clicked="Button_Clicked"
                FontSize="Large"
                Text="Ingresar" />
        </StackLayout>

    </ContentPage.Content>
</ContentPage>