<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinClase02.Views.Aceleracion"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Margin="10,0,10,0">
            <Label Text="Calculo de Tiempo" />
            <Label Text="Ingrese Velocidad" />
            <Entry x:Name="entryVelocidad" Placeholder="Velocidad" />
            <Label Text="Ingrese Distancia" />
            <Entry x:Name="entryDistancia" Placeholder="Distancia KMs" />
            <Button Clicked="Button_Clicked" Text="Calcular" />
            <Label FontSize="Medium" Text="Resultado" />
            <Label x:Name="lblResultado" FontSize="Medium" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>