<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinClase02.Bindings.BindingObjetos"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Label
                BindingContext="{x:Reference Name=texto}"
                HorizontalOptions="Center"
                Text="{Binding Path=Text}" />
            <Entry x:Name="texto" Placeholder="Escriebe algo ....." />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>